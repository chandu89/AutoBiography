<style type="text/css">
    textarea { 
        font-size: 20px;
        font-family: Arial;
        color: lightslategray;
    }
    body{
        background-image: url('/assets/old_book2.jpg');
        background-repeat: no-repeat;
        background-position: 0 0;
        background-size: cover;
    }

</style>
<script type="text/javascript">
    <%if !flash[:notice].blank? %>
        $.gritter.add({
            title: 'Notice',
            text: '<%= flash[:notice]%>'
        });
    <%end%>
    <%if !flash[:error].blank? %>
        $.gritter.add({
            title: 'Error',
            text: '<%= flash[:error]%>'
        });
    <%end%>
</script>
<div class="row">
    <div class="span2"> </div>
    <div class="page-center span8">
        <%= form_for @autobio, url: {action: "create"} do |f| %>
            <%= f.label :Chapter_Heading ,:style=> "font-family: 'ReplicaStdLight'; font-size: 2.1em; color: white; z-index: 100;"%>
            <%= f.text_field :heading,:class => "span3",:style=>"font-size: 20px; color:black;"%><br/>
            <%= f.label :Your_day ,:style=> "font-family: 'ReplicaStdLight'; font-size: 2.1em; color: white; z-index: 100;"%>
            <%= f.text_area :about, :rows => 10, :cols => 200 ,:class => "span8", :maxlength=> 985,:style=>"font-size: 20px; color:black;"%><br/>
            <%= f.submit  "Add today" ,:class => "btn btn-outline-inverse btn-lg btn-info",:style=> "font-size: 20px;" %>
        <% end %>    
    </div>
</div>


