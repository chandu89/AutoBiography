<style type="text/css">
	body{
        background-image: url('/assets/old_book2.jpg');
        background-repeat: no-repeat;
        background-position: 0 0;
        background-size: cover;
    }
</style>
<div class="container">
  	<div class="row">
  		<div class="span4"></div>
  		<div class="span6">
        	<div class="page-center white-text">

				<h2>Sign up</h2>

				<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
					<%= devise_error_messages! %>

					<div class="">
						<%= f.label :email,:style=>"color: black;" %>
						<%= f.email_field :email, autofocus: true %>
					</div>

					<div>
						<%= f.label :password ,:style=>"color: black;"%> 
							<% if @validatable %>
							<i style="color: red;">(<%= @minimum_password_length %> characters minimum)</i>
						<% end %><br />
						<%= f.password_field :password, autocomplete: "off" %>
					</div>

					<div>
						<%= f.label :password_confirmation, :style=>"color: black;"%>				
						<%= f.password_field :password_confirmation, autocomplete: "off" %>
					</div>

					<div><%= f.submit "Sign up" ,:class => "btn btn-outline-inverse btn-info btn-lg"%></div>
				<% end %>
			</div>
		</div>
	</div>
</div>

<%#= render "devise/shared/links" %>
