<div class="margintop50">
	<div class="row">
		<div class="span2"></div>
		<div class="container span6">
			<h2 class="white-text">Forgot your password?</h2>

			<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
			  <%= devise_error_messages! %>

			  <div class="font-gender">
			  	<%= f.email_field :email, :placeholder => "Email", autofocus: true ,:style=>"background: white;font-size:15px;border: 1px solid #a1a1a1; border-radius: 15px;" %>
			  </div>

			  <div>
			  	<%= f.submit "Send me reset password instructions" ,:class => "btn btn-outline-inverse btn-success btn-large"%>
			  </div>
			<% end %>

			<%#= render "devise/shared/links" %>
		</div>
	</div>
</div>